# ==================================================
# 后端环境变量模板 (Backend Environment Variables Template)
# ==================================================
# 复制此文件为 .env 并填入实际值

# API设置
API_V1_STR=/api/v1
SECRET_KEY=your-secret-key-change-this-in-production

# ==================================================
# LLM Provider Settings (LLM服务商配置)
# ==================================================

# OpenAI (获取地址: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude (获取地址: https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenRouter (推荐使用，获取地址: https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_NAME=SolutionAgent

# ==================================================
# 服务器配置 (Server Configuration)
# ==================================================

# CORS设置 - 允许的前端域名
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8005

# 服务器端口
PORT=8001
HOST=0.0.0.0

# ==================================================
# 文件上传配置 (File Upload Configuration)
# ==================================================

# 最大文件大小 (50MB)
MAX_FILE_SIZE=52428800

# 上传目录
UPLOAD_DIR=./上传文件

# ==================================================
# 其他配置
# ==================================================

# 环境类型: development, production, testing
ENVIRONMENT=development

# 是否启用调试模式
DEBUG=true

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO