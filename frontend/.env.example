# ==================================================
# 前端环境变量模板 (Frontend Environment Variables Template)
# ==================================================
# 复制此文件为 .env.local 并根据需要修改值

# ==================================================
# API配置 (API Configuration)
# ==================================================

# 后端API基础URL (根据部署环境修改)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8001

# ==================================================
# 应用配置 (Application Configuration)
# ==================================================

# 应用名称
NEXT_PUBLIC_APP_NAME=Solution Agent

# 网站标题
NEXT_PUBLIC_SITE_TITLE=智能解决方案生成器

# 网站描述
NEXT_PUBLIC_SITE_DESCRIPTION=基于AI的多智能体协作文档和解决方案写作系统

# ==================================================
# 功能开关 (Feature Flags)
# ==================================================

# 是否启用文件上传功能
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# 是否启用文本优化功能
NEXT_PUBLIC_ENABLE_TEXT_OPTIMIZATION=true

# 是否启用会话管理
NEXT_PUBLIC_ENABLE_SESSIONS=true

# 是否显示智能体执行详情
NEXT_PUBLIC_SHOW_AGENT_DETAILS=true

# ==================================================
# 文件上传配置 (File Upload Configuration)
# ==================================================

# 支持的文件类型
NEXT_PUBLIC_SUPPORTED_FILE_TYPES=.pdf,.docx,.txt,.md

# 最大文件大小 (50MB)
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# ==================================================
# UI配置 (UI Configuration)
# ==================================================

# 默认主题 (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=system

# 是否启用调试模式 (生产环境设为false)
NEXT_PUBLIC_DEBUG=false